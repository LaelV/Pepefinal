{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1>Bonjour {% if app.user %}{{ app.user.username }} {% else %}anonyme{% endif %}! ✅</h1>
    {% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que {{ app.user.username }}<br><br>
                <a href="{{ path('app_logout') }}"><button type="button" class"btn btn-primary">Déconnection</button></a>
			</div><br>
            {% if is_granted('ROLE_MEDECIN')  %}
                <a href="{{ path('app_register') }}"><button type="button" class"btn btn-primary">Créer un/des compte(s)</button></a>
            {% endif %}
    {% else %}
        <a href='/login'><button type="button" class"btn btn-primary">Connexion</button></a><br>
	{% endif %}
{% endblock %}