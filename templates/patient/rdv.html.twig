{% extends 'base.html.twig' %}

{% block title %}Mes rendez-vous{% endblock %}

{% block body %}
    {% if patient is defined %}
        {% if rdvs is defined %}
            <h3>Patient : {{patient.nom}}</h3>
            <table class="table table-bordered">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Date</th>
                        <th scope="col">Medecin</th>
                        <th scope="col">Dur√©e</th>
                        <th scope="col">Statut</th>
                        <th scope="col">Modifier/annuler</th>
                    </tr>
                </thead>
                <tbody>
                    {% for rdv in rdvs %}
                        <tr>
                            <th scope="row">{{rdv.date | date("m/d/Y")}}</th>
                            <td>{{rdv.medecin.nom}}</td>
                            <td>{{rdv.duree}}mins</td>
                            <td>{{rdv.statut.libelle}}</td>
                            <td><a href="/patient/modif-rdv/{{rdv.id}}"><button>Modifier le rendez-vous</button></a>
                            <a href="/patient/annuler-rdv/{{rdv.id}}"><button>Annuler le rendez-vous</button></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    {% endif %}
{% endblock %}